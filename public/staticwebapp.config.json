{
    "routes": [
        {
            "route": "/api/*",
            "allowedRoles": ["anonymous", "authenticated"]
        },
        {
            "route": "/static/*",
            "headers": {
                "cache-control": "max-age=31536000"
            }
        },
        {
            "route": "/static/js/*",
            "headers": {
                "content-type": "application/javascript"
            }
        },
        {
            "route": "/static/css/*",
            "headers": {
                "content-type": "text/css"
            }
        },
        {
            "route": "/*",
            "rewrite": "/index.html"
        }
    ]
}